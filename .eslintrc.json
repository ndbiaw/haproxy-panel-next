{
  "extends": "next/core-web-vitals",
  "ignorePatterns": ["node_modules/", "specification_openapiv3.js"],
  "rules": {
    "brace-style": [
      "error",
      "1tbs",
      { "allowSingleLine": true }
    ],
    "indent": [
      "error",
      "tab",
      { "SwitchCase": 1, "ignoreComments": true, "MemberExpression": 1 }
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "jsx-quotes": [
      "error",
      "prefer-single"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    "curly": ["error"],
    "no-multiple-empty-lines": ["error", { "max": 1 }],
    "no-template-curly-in-string": [
      "error"
    ],
    "no-trailing-spaces": ["error"],
    "no-unused-vars": [
      "error",
      {
        "argsIgnorePattern": "^_",
        "varsIgnorePattern": "^_"
      }
    ]
  }
}
